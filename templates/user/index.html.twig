{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="infos">
    <div class="row ">
        <div class="col-12" id="fieldPseudo">
            <p style="font-weight:bold;font-size:1.2rem">Nom : {{user.firstname}}</p>
        </div>
    </div>
    <div class="row ">
        <div class="col-12" id="fieldPseudo">
            <p style="font-weight:bold;font-size:1.2rem">Prenom : {{user.lastname}}</p>
        </div>
    </div>
    <div class="row ">
        <div class="col-12" id="fieldPseudo">
            <p style="font-weight:bold;font-size:1.2rem">Date de naissance : {{user.birthday|date("m/d/Y")}}</p>
        </div>
    </div>
    <div class="row ">
        <div class="col-12" id="fieldPseudo">
            <p style="font-weight:bold;font-size:1.2rem">N° de Secu : {{user.secu ? user.secu : ' -- '}}</p>
        </div>
    </div>
    <div class="row ">
        <div class="col-12" id="fieldPseudo">
            <p style="font-weight:bold;font-size:1.2rem">N° de téléphone : {{user.tel ? user.tel : ' -- '}}</p>
        </div>
    </div>
</div>
<div class="rdv">
    {% if user.appointments|length > 0 %}
        <ul>
            {% for appointment in user.appointments %} 
                <li>
                    <h2>{{appointment.consultation.title}} le {{appointment.start|date("d/m/Y")}} de {{appointment.start|date('H:i')}} à {{appointment.end|date('H:i')}} avec {{appointment.doctor.user.firstname}} {{appointment.doctor.user.lastname}}</h2>
                </li> 
            {% endfor %}
        </ul>
    {% else %}
        <h2>Aucun rdv programmé pour le moment</h2>
    {% endif %}
</div>
<div class="doc">
    <div class="row ">
        <div class="col-12" id="fieldPseudo">
            <p style="font-weight:bold;font-size:1.2rem">Ici plus tard, des docs</p>
        </div>
    </div>
</div>
{% endblock %}
