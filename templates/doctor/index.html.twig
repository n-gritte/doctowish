{% extends 'base.html.twig' %}

{% block title %}Hello DoctorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{% if cabinets|length > 0 %}
    {% for cabinet in cabinets %}  
        <div class="col-3 mb-4">   
            <p class="f-2r">{{cabinet.title}}</p><a href="{{path('app_doctor_edit',{'id':cabinet.id})}}"><i data-feather="edit"></i></a><a href="{{path('app_doctor_delete',{'id':cabinet.id})}}"><i data-feather="trash-2"></i></a>
        </div>
    {% endfor %}
{% else %}
    <div class="col-3 mb-4">   
        <p class="f-2r">Pas encore de cabinet<br>Cr√©ez votre premier cabinet</p>
    </div>
{% endif %}

<h1>Nouveau Cabinet</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}
        {{ form_row(form.title, {
            label: 'Titre'
        }) }}
        {{ form_row(form.address1, {
            label: 'Adresse'
        }) }}
        {{ form_row(form.address2, {
            label: 'Complement'
        }) }}
        {{ form_row(form.city, {
            label: 'Ville'
        }) }}
        {{ form_row(form.zipcode, {
            label: 'Code postale'
        }) }}
        {{ form_row(form.country, {
            label: 'Pays'
        }) }}
        {{ form_row(form.siret, {
            label: 'Numero siret'
        }) }}

        <button type="submit" class="btn">Nouveau Cabinet</button>
    {{ form_end(form) }}

{% endblock %}
